<h1>
  Course #<%= @the_course.id %> details
</h1>

<div>
  <a href="/courses">
    Go back
  </a>
</div>

<div>
  <a href="/delete_course/<%= @the_course.id %>">
    Delete course
  </a>
</div>

<hr>

<form action="/modify_course/<%= @the_course.id %>" method="post">
  <div>
    <label for="query_title">
      Title
    </label>

    <input id="query_title" type="text" name="query_title" value="<%= @the_course.title %>">
  </div>

  <div>
    <label for="query_term_offered">
      Term offered
    </label>

    <input id="query_term_offered" type="text" name="query_term_offered" value="<%= @the_course.term_offered %>">
  </div>

  <div>
    <label for="query_path_id">
      Department
    </label>

    <select id="query_path_id" name="query_path_id">
      <% Department.order({ :name => :asc }).each do |a_department| %>
        <% if a_department.id == @the_course.department_id %>
          <option value="<%= a_department.id %>" selected>
            <%= a_department.name %>
          </option>
        <% else %>
          <option value="<%= a_department.id %>">
            <%= a_department.name %>
          </option>
        <% end %>
      <% end %>
    </select>
  </div>

  <button>
    Update course
  </button>
</form>

<hr>

<dl>
  <dt>
    Title
  </dt>
  <dd>
    <%= @the_course.title %>
  </dd>

  <dt>
    Term offered
  </dt>
  <dd>
    <%= @the_course.term_offered %>
  </dd>

  <dt>
    Department
  </dt>
  <dd>
    <% department = Department.where({ :department_id => @department.id }).at(0) %>
    <a href="/departments/<%= department.id %>"><%= department.name %></a>
  </dd>

  <dt>
    Number of enrolled students
  </dt>
  <dd>
    <%= Enrollment.where({ :course_id => @the_course.id }).count %>
  </dd>
</dl>

<hr>

<h2>Roster</h2>
<ul>
  <% Enrollment.where({ :course_id => @the_course.id }).each do |enrollment| %>
    <% student = Student.where({ :id => enrollment.student_id }).at(0) %>
    <li>
      <a href="/students/<%= student.id %>">
        <%= student.first_name %> <%= student.last_name %>
      </a>
    </li>
  <% end %>
</ul>
