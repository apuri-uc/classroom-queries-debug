<h1>
  List of all courses
</h1>

<hr>
<form action="/insert_course" method="post">
  <div>
    <label for="query_title">
      Title
    </label>

    <input id="query_title" type="text" name="query_title">
  </div>

  <div>
    <label for="query_term_offered">
      Term offered
    </label>

    <input id="query_term_offered" type="text" name="query_term_offered">
  </div>

  <div>
    <label for="query_path_id">
      Department
    </label>

    <select id="query_path_id" name="query_path_id">
      <% Department.order({ :name => :asc }).each do |a_department| %>
        <option value="<%= a_department.id %>">
          <%= a_department.name %>
        </option>
      <% end %>
    </select>
  </div>

  <button>
    Create course
  </button>
</form>
</hr>

<table class="table" border="1">
  <tr>
    <th>
      ID
    </th>

    <th>
      Title
    </th>

    <th>
      Term offered
    </th>

    <th>
      Department
    </th>



    <th>
    </th>
  </tr>

  <% @list_of_courses.each do |course| %>
    <tr>
      <td>
        <%= course.id %>
      </td>

      <td>
        <%= course.title %>
      </td>

      <td>
        <%= course.term_offered %>
      </td>

      <td>
          Department
      </td>

      <td>
        <a href="/courses/<%= course.id %>">
          Show details
        </a>
      </td>
    </tr>
  <% end %>
</table>

<hr>
